<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.JobuCustomer" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/primary_dark</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/secondary_dark</item>
        <item name="colorOnSecondaryContainer">@color/white</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.JobuCustomer</item>
    </style>

    <style name="BottomNavActiveTextAppearance" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/lexend_regular</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="BottomNavInactiveTextAppearance" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/lexend_regular</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/BottomNavActiveTextAppearance</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavInactiveTextAppearance</item>
    </style>

    <style name="TitleTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/lexend_bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="BoldSubTitleTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/lexend_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SubTitleTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/lexend_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ListTitleStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/lexend_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ListBodyStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/lexend_light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BodyTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/lexend_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BoldBodyTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/lexend_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BodyLightTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/lexend_light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="HeadingStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/lexend_bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="LabelStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/lexend_medium</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/lexend_medium</item>
    </style>

    <style name="PrimaryMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/buttons</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/lexend_bold</item>
        <item name="cornerRadius">@dimen/cardRadius</item>
        <item name="strokeColor">@color/buttons</item>
        <item name="strokeWidth">1dp</item>
        <item name="elevation">0dp</item>
        <item name="rippleColor">@color/buttons_light</item>
    </style>

    <style name="Theme.JobuCustomer" parent="Base.Theme.JobuCustomer" />
</resources>
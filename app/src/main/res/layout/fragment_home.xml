<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.fragments.Home">

    <include
        android:id="@+id/layoutHeader"
        layout="@layout/layout_dashboard_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Space
            android:id="@+id/spaceStatistics"
            android:layout_width="0dp"
            android:layout_height="10dp" />

        <include
            android:id="@+id/layoutStatistics"
            layout="@layout/layout_dashboard_statistics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spaceStatistics"
            android:layout_marginHorizontal="16dp" />

        <Space
            android:id="@+id/spaceRequestServices"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_below="@+id/layoutStatistics"
            android:visibility="gone" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRequestService"
            style="@style/PrimaryMaterialButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/spaceRequestServices"
            android:layout_marginHorizontal="16dp"
            android:padding="16dp"
            android:text="@string/request_for_service"
            android:textAllCaps="true"
            android:visibility="gone"
            app:icon="@drawable/rounded_send_24"
            app:iconGravity="textStart" />

        <Space
            android:id="@+id/spaceRecentActivities"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_below="@+id/btnRequestService" />

        <include
            android:id="@+id/layoutServiceCategories"
            layout="@layout/layout_service_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/spaceRecentActivities" />

    </RelativeLayout>


</LinearLayout>
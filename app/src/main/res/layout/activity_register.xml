<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.activities.Register">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <include
                android:id="@+id/layoutRegisterFirstName"
                layout="@layout/layout_register_first_name" />

            <Space
                android:layout_width="0dp"
                android:layout_height="@dimen/spacing_mlarge" />

            <include
                android:id="@+id/layoutRegisterLastName"
                layout="@layout/layout_register_last_name" />

            <Space
                android:layout_width="0dp"
                android:layout_height="@dimen/spacing_mlarge" />

            <include
                android:id="@+id/layoutRegisterPhoneNumber"
                layout="@layout/layout_register_phone_number" />

            <Space
                android:layout_width="0dp"
                android:layout_height="@dimen/spacing_mlarge" />

            <include
                android:id="@+id/layoutRegisterNationalId"
                layout="@layout/layout_register_national_id" />

            <Space
                android:layout_width="0dp"
                android:layout_height="@dimen/spacing_mlarge" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRegister"
                style="@style/PrimaryMaterialButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="@string/register"
                android:textAllCaps="true" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>